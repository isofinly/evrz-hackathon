BaseTemplate = ({ children }: Props) => {
  const stickyActionsHeight = useUnit($$stickyActions.$height)

  return (
    <main
    {/*<REVIEW>Стили className должны быть модульными</REVIEW>*/}
      className="flex flex-col"
      {/*<REVIEW>Стилистика, которая не зависит от перемнных должна быть в className</REVIEW>*/}
      style={{
        minHeight: 'var(--tg-viewport-stable-height)',
        paddingBottom: stickyActionsHeight,
      }}
    >
      {children}
    </main>
  )
}