HomePage = () => {
  const view = useUnit($view)

  if (view === View.TechnicalIssue) {
    return <ServiceNotWorkingPage />
  }

  const skeleton = view === View.ContentLoading

  return (
    <BaseTemplate>
    {/*<REVIEW>Стили className должны быть модульными</REVIEW>  */}
      <Container className="flex flex-col gap-2 my-2">
        <MenuCard
        {/*<REVIEW>Стили className должны быть модульными</REVIEW>  */}
          className="bg-purple-100"
          text="Мои записи"
          image={calendarImage}
          skeleton={skeleton}
          action={{
            type: 'link',
            to: routes.appointments,
          }}
        />
        <MenuCard
        {/*<REVIEW>Стили className должны быть модульными</REVIEW>  */}
          className="bg-green-100"
          text="Вопросы и ответы"
          image={papersImage}
          skeleton={skeleton}
          action={{
            type: 'link',
            to: routes.faq,
          }}
        />
        <MenuCard
        {/*<REVIEW>Стили className должны быть модульными</REVIEW>  */}
          className="bg-purple-100"
          text="Поддержка"
          image={rocketImage}
          skeleton={skeleton}
          action={{
            type: 'external-link',
            href: 'https://t.me/RussiaConsulateBotSupport',
          }}
        />
      </Container>
      <StickyPurchaseOffer />
    </BaseTemplate>
  )
}