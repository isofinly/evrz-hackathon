class ErrorBoundary extends Component<Props, State> {
  static getDerivedStateFromError(error: Error) {
    const { error } = this.state
    const { children } = this.props

    if (!error) {
      return children
    }

    return <ServiceNotWorkingPage />
  }

  state: State = {
    error: null,
  }

  render() {
    const { error } = this.state
    const { children } = this.props

    if (!error) {
      return children
    }

    return <ServiceNotWorkingPage />
  }
}