StickyPurchaseOffer = () => {
  const active = useUnit($stickyPurchaseOfferActive)

  {/*<REVIEW>Условный оператор должен иметь фигурные скобки</REVIEW>  */}
  if (!active) return null

  return (
    <div>
      <PurchaseOfferCurtain />
      <StickyActions>
        <PurchaseButton />
      </StickyActions>
    </div>
  )
}