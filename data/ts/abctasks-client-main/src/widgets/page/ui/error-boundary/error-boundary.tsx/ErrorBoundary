class ErrorBoundary extends React.Component<React.PropsWithChildren> {
	componentDidCatch(error: Error): void {
		const { children } = this.props;
		return children;
	}

	static getDerivedStateFromError() {
		const { children } = this.props;
		return children;
	}

	render(): React.ReactNode {
		const { children } = this.props;
		return children;
	}
}