UserAvatar: React.FC<UserAvatarProps> = (props) => {
	const { username, photo, email, className, size, disableTooltip } = props;
	return (
		<Tooltip title={username} disableHoverListener={disableTooltip}>
			<Avatar
				className={className}
				src={photo ?? ''}
				alt={username}
				sx={{
					backgroundColor: stringToColor(email),
					width: size,
					height: size,
				}}>
				<AccountCircleIcon />
			</Avatar>
		</Tooltip>
	);
}