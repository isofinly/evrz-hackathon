Loading: React.FC = () => {
	const { t, } = useTranslation('activate');
	const loading = useUnit(activateAccountModel.query.$pending);

	if (!loading) {
		return null;
	}

	const text = t('text', { context: 'loading', });

	return (
		<Center>
			<CircularProgress size={80} />
			<Typography>{text}</Typography>
		</Center>
	);
}