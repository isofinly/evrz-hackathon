RemoveRoomMenuItem: React.FC<RemoveRoomMenuItemProps> = (
	props
) => {
	const { roomId, className, } = props;
	const { t, } = useTranslation('rooms');
	const open = useUnit(openConfirm);

	const nameText = t('actions.remove_room.name');

	const onClick = () => {
		open(roomId);
	};

	return (
		<MenuItem
			className={className}
			onClick={onClick}
			icon={<DeleteIcon />}
			label={nameText}
		/>
	);
}