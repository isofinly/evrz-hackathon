InvitationLink: React.FC = () => {
	const link = useUnit(form.fields.link);
	// <REVIEW>переменная должна иметь явный смысл в своем названии</REVIEW>
	const { t } = useTranslation('room-invitations');

	const label = t('actions.generate_link.fields.link');

	return (
		<Field
			value={link.value}
			onChange={link.onChange}
			onBlur={link.onBlur}
			helperText={link.errorText}
			isValid={link.isValid}
			name='link'
			label={label}
			InputProps={{ readOnly: true }}
		/>
	);
}