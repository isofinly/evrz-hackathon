import { Record, String, Static, Number } from 'runtypes';

import { tokens } from '../request';

export const user = Record({
	id: Number,
	email: String,
	username: String,
	photo: String.nullable(),
}).asReadonly();


export interface User extends Static<typeof user> <BODY User>

export const authResponse = Record({
	tokens,
	user,
}).asReadonly();


export interface AuthResponse extends Static<typeof authResponse> <BODY AuthResponse>


export interface LoginParams <BODY LoginParams>


export interface RegistrationParams <BODY RegistrationParams>


export interface ActivateParams <BODY ActivateParams>