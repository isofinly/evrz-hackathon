	id,
}: ApproveInvitationRequestParams): ApproveInvitationResponseData => <BODY approveInvitation>;

export const rejectInvitation = async ({
	id,
}: RejectInvitationRequestParams): RejectInvitationResponseData => <BODY rejectInvitation>;

export const remove = async ({
	roomId,
	id,
}: RemoveInvitationRequestParams): RemoveInvitationResponseData => <BODY remove>;