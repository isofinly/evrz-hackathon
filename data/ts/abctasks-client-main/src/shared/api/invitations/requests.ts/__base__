} from './types';

export const getAll = async ({
	roomId,
}: GetAllInvitationsRequestParams): GetAllInvitationsResponseData => <BODY getAll>;

export const getViaToken = async ({
	token,
}: GetInvitationViaTokenRequestParams): GetInvitationViaTokenResponseData => <BODY getViaToken>;

export const invite = async ({
	roomId,
