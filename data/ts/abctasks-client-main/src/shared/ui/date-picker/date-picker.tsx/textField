textField = (params: TextFieldProps) => {
			const handleBlur = (...args: any[]) => {
				onBlur?.();
				// eslint-disable-next-line @typescript-eslint/ban-ts-comment
				// @ts-ignore
				params.onBlur?.(...args);
			};

			return (
				<Field
					{...params}
					onBlur={handleBlur}
					isValid={isValid}
					name={name}
					helperText={helperText}
				/>
			);
		}