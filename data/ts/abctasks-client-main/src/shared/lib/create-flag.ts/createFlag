createFlag = (defaultValue = false) => {
	const $flag = createStore<boolean>(defaultValue);

	// <REVIEW>событие должно происходить в хранилище по пути /src/Model/{название}/events/event.ts</REVIEW>
	const enable = createEvent();
	// <REVIEW>событие должно происходить в хранилище по пути /src/Model/{название}/events/event.ts</REVIEW>
	const toggle = createEvent();
	// <REVIEW>событие должно происходить в хранилище по пути /src/Model/{название}/events/event.ts</REVIEW>
	const disable = createEvent();

	// <REVIEW>сэмплирование должно происходить в хранилище по пути /src/Model/{название}/state.ts</REVIEW>
	sample({
		clock: toggle,
		source: $flag,
		fn: (flag) => !flag,
		target: $flag,
	});

	// <REVIEW>сэмплирование должно происходить в хранилище по пути /src/Model/{название}/state.ts</REVIEW>
	sample({
		clock: enable,
		fn: () => true,
		target: $flag,
	});

	// <REVIEW>сэмплирование должно происходить в хранилище по пути /src/Model/{название}/state.ts</REVIEW>
	sample({
		clock: disable,
		fn: () => false,
		target: $flag,
	});

	return {
		$flag,
		enable,
		disable,
		toggle,
		'@@unitShape': () => ({ flag: $flag, enable, disable, toggle }),
	};
}