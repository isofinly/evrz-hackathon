import { ReactNode } from 'react';

export type Size = 'small' | 'medium' | 'large';

export interface CommonProps <BODY CommonProps>

export interface BasePopupProps extends CommonProps <BODY BasePopupProps>

interface SinglePickerProps<T> <BODY SinglePickerProps>

interface MultiplePickerProps<T> <BODY MultiplePickerProps>

export type PickerProps<T> = SinglePickerProps<T> | MultiplePickerProps<T>;

export type Slots<T extends string> = {
	readonly [K in T]?: ReactNode | null;
};

export type Classes<T extends string> = {
	readonly [K in T]?: string;
};