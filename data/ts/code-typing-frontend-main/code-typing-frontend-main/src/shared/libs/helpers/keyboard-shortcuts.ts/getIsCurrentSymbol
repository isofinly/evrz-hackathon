getIsCurrentSymbol = (e: KeyboardShortcutsEvent, key: string) => {
    // <REVIEW>
    // множественная проверка одной переменной должна выполняться через switch
    // значения лучше сравнивать с константами а не со значением стрроок
    // switch (key) {
    //     case CTRL:
    //         return e.ctrlKey;
    //     case SHIFT:
    //         return e.shiftKey;
    //     case ALT:
    //         return e.altKey;
    //     case META:
    //         return e.metaKey;
    //     default:
    //         return key === e.key;
    // }
    // </REVIEW>
    if (key === "Ctrl") return e.ctrlKey
    if (key === "Shift") return e.shiftKey
    if (key === "Alt") return e.altKey
    if (key === "Meta") return e.metaKey
    return key === e.key
}