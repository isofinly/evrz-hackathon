Providers = ({ children }: { children?: ReactNode }) => {
    const theme = useCurrentTheme()

    return (
        <QueryClientProvider client={queryClient}>
            <ChakraProvider theme={theme} colorModeManager={colorModeManager}>
                <ViewerProvider>
                    <RouterProvider router={router} />
                    {children}
                </ViewerProvider>
            </ChakraProvider>
        </QueryClientProvider>
    )
}